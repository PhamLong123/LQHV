@model Eproject_RealtorsPortal.Models.Country

@{
    ViewData["Title"] = "AddCountry";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<section class="content pt-2 pb-1">
    <div class="container-fluid">
        <div class="row">
            <div class="offset-md-3 col-md-6">
                <!-- general form elements -->
                <div class="card card-primary">
                    <div class="card-header">
                        <h3 class="card-title">Add Country</h3>
                    </div>
                    <!-- form start -->
                    <form asp-action="AddCountry" method="post" role="form">
                        <div class="card-body">
                            @if (@ViewBag.sg != null)
                            {
                                <p style="color: green; font-weight:bold">@ViewBag.sg</p>

                            }
                            @if (@ViewBag.msg != null)
                            {
                                <p style="color: red;">@ViewBag.msg</p>
                            }
                            <div class="form-group">
                                <label for="txt-name">Country Name <small style="color: red;">*</small></label>
                                <input type="text" class="form-control" id="txt-name" name="CountriesName" required>
                            </div>

                            <div class="card-footer">
                                <button type="submit" class="btn btn-primary">Save</button>
                                <button type="reset" class="btn btn-outline-danger">Reset</button>
                                <a class="float-end" href="@Url.Action("ViewCountry", "Location")"><i class="fas fa-undo-alt"></i>Back to List</a>
                            </div>
                        </div>
                    </form>
                </div>
                <!-- /.card -->
            </div>
        </div>
    </div>
</section>
