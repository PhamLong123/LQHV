@model Eproject_RealtorsPortal.Models.User

@{
    ViewData["Title"] = "DetailsUser";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<section class="content pt-2 pb-1">
    <div class="container-fluid">
        <div class="row">
            <div class="offset-md-3 col-md-6">
                <div class="card card-primary">
                    <div class="card-header">
                        <h3 class="card-title">Details - @Model.UsersFullname</h3>
                    </div>
                    <form role="form">

                        <div class="card-body">

                            <div class="row">
                                <div class="col-6 col-auto">
                                    <div class="form-group">
                                        <label for="image">Avatar</label> <br>
                                        <img class="img-fluid" src="/Image/User/@Model.UsersImage" class="img-circle elevation-2" width="100" height="100" />
                                    </div>
                                </div>
                                <div class="col-6 col-auto">
                                    <div class="form-group">
                                        <label for="txt-name">Status</label><br />
                                        @if (Model.UsersStatus == false)
                                        {
                                            <div class="row">
                                                <div class="col-auto">
                                                    <label for="UsersStatus" class="btn btn-danger">
                                                        <input type="radio" name="UsersStatus" value="false" checked>
                                                        Not activated
                                                    </label>
                                                </div>

                                            </div>
                                        }
                                        else
                                        {
                                            <div class="row">

                                                <div class="col-auto">
                                                    <label for="UsersStatus" class="btn btn-warning">
                                                        <input type="radio" name="UsersStatus" value="true" checked>
                                                        Activated
                                                    </label>
                                                </div>
                                            </div>
                                        }
                                    </div>
                                    <label for="txt-name" class="pe-2">Gender: </label>
                                    @if (Model.UsersGender != null)
                                    {
                                        @if (Model.UsersGender == true)
                                        {
                                            <p><i class="fas fa-male"></i>Male</p>
                                        }
                                        else
                                        {
                                            <p><i class="fas fa-female"></i>Female</p>
                                        }
                                    }
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="txt-name">ID</label>
                                <input type="text" class="form-control" id="txt-id" name="UsersId" value="@Model.UsersId" readonly>

                            </div>

                            <div class="form-group">
                                <label for="txt-name">Full Name</label>
                                <input type="text" class="form-control" id="txt-name" name="UsersFullname" value="@Model.UsersFullname" readonly>
                            </div>

                            <div class="form-group">

                                <label for="txt-name">Email</label>
                                <input type="email" class="form-control" id="txt-email" name="UsersEmail" value="@Model.UsersEmail" readonly>
                            </div>
                            <div class="form-group">

                                <label for="txt-password">Phone</label>
                                <input type="text" class="form-control" name="UsersPhone" value="@Model.UsersPhone" readonly>
                            </div>

                            <div class="form-group">

                                <label for="txt-password">Address</label>
                                <textarea type="" class="form-control" name="UsersAddress" readonly>@Model.UsersAddress</textarea>
                            </div>
                            <div class="card-footer">
                                <a class="btn btn-outline-danger" href="@Url.Action("ViewUser", "Home")"><i class="fas fa-undo-alt"></i>Come back</a>
                            </div>

                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>


