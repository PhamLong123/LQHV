@model Eproject_RealtorsPortal.Models.Admin

@{
    ViewData["Title"] = "DetailsAdmin";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<section class="content pt-2 pb-1">
    <div class="container-fluid">
        <div class="row">
            <div class="offset-md-3 col-md-6">
                <div class="card card-primary">
                    <div class="card-header">
                        <h3 class="card-title">Details - @Model.AdminName</h3>
                    </div>
                    <form role="form">

                        <div class="card-body">
                            <div class="row">
                                <div class="col-6 col-auto">
                                    @if (Model.AdminImage != null)
                                    {
                                        <div class="form-group">
                                            <label for="image">Avata</label> <br>
                                            <img class="img-fluid" src="/admin/dist/img/@Model.AdminImage" class="img-circle elevation-2" width="100" height="100" />
                                        </div>
                                    }
                                    else
                                    {
                                        <div class="form-group">
                                            <label for="image">Avata</label> <br>
                                            <img class="img-fluid" src="/admin/dist/img/defaultImage.jpg" class="img-circle elevation-2" width="100" height="100" />
                                        </div>
                                    }

                                </div>
                                <div class="col-6 col-auto">
                                    <div class="form-group">
                                        <label for="txt-name">Status</label><br />
                                        @if (Model.AdminStatus == false)
                                        {
                                            <div class="row">
                                                <div class="col-auto">
                                                    <label for="AdminStatus" class="btn btn-danger">
                                                        <input type="radio" name="AdminStatus" value="false" checked>
                                                        Not activated
                                                    </label>
                                                </div>

                                            </div>
                                        }
                                        else
                                        {
                                            <div class="row">

                                                <div class="col-auto">
                                                    <label for="UsersStatus" class="btn btn-warning">
                                                        <input type="radio" name="UsersStatus" value="true" checked>
                                                        Activated
                                                    </label>
                                                </div>
                                            </div>
                                        }
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="txt-name">ID</label>
                                <input type="text" class="form-control" id="txt-id" name="AdminId" value="@Model.AdminId" readonly>

                            </div>

                            <div class="form-group">
                                <label for="txt-name">Full Name</label>
                                <input type="text" class="form-control" id="txt-name" name="AdminName" value="@Model.AdminName" readonly>
                            </div>

                            <div class="form-group">

                                <label for="txt-name">Email</label>
                                <input type="email" class="form-control" id="txt-email" name="AdminEmail" value="@Model.AdminEmail" readonly>
                            </div>
                            <div class="form-group">

                                <label for="txt-password">Role</label>
                                <input type="text" class="form-control" name="AdminRole" value="@Model.AdminRole" readonly>
                            </div>


                        </div>
                        <div class="card-footer">
                            <a class="btn btn-outline-danger" href="@Url.Action("ViewAdmin", "Home")"><i class="fas fa-undo-alt"></i>Come back</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

<script src="~/admin/plugins/bs-custom-file-input/bs-custom-file-input.min.js"></script>

<script type="text/javascript">
    $(document).ready(function () {
        bsCustomFileInput.init();
    });
</script>