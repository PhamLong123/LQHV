@{
    ViewData["Title"] = "AdminAuthenticationEmail";

}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] Eproject_RealtorsPortal</title>
    @*  <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />*@
    <link rel="icon" type="image/x-icon" href="~/Image/logo_small.png" />
    <!--BOOTSTRAP 5 CDN-->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Font Awesome -->
    <link rel="stylesheet"
          href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
    <script src="https://code.jquery.com/jquery-3.6.0.min.js" integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=" crossorigin="anonymous"></script>
    <!-- Google Fonts Roboto -->
    <link rel="stylesheet"
          href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;500;700;900&display=swap" />

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Eproject_RealtorsPortal.styles.css" asp-append-version="true" />
</head>
<body>
    <header class="section-header">

        <section class="header-main border-bottom">
            <div class="container-fluid">
                <div class="row gy-3 align-items-center">
                    <div class="col-lg-2 col-md-3 col-4 p2">
                        <a href="@Url.Action("Index","Home")" class="brand-wrap"> <img class="logo" height="85" src="/Image/logo1.png"> </a>
                    </div>
                    <div class="order-md-last col-lg-5 col-md-5 col-8">
                        <div class="float-end">
                            <a href="#" class="btn btn-light">
                                <i class="fa me-lg-1 fa-phone text-primary"></i>
                                <span class="text-primary d-none d-lg-inline-block">+01 23456670</span>
                            </a>
                            
                        </div>
                    </div> <!-- col end.// -->
                    <div class="col-lg-5 col-md-4 col-12">
                        <form action="#">
                            <div class="input-group w-100"> <input type="text" class="form-control" placeholder="Search" style="width:55%;"> <button class="btn btn-outline-primary"> <i class="fa fa-search"></i> </button> </div> <!-- input-group end.// -->
                        </form> <!-- search-wrap end.// -->
                    </div> <!-- col end.// -->
                </div> <!-- row end.// -->
            </div> <!-- container end.// -->
        </section> <!-- header-main end.// -->
        
    </header>
    <div>
        <main role="main">
            <div class="container">
                <div class="authentication-wrapper authentication-basic container-p-y">
                    <div class="authentication-inner py-4">
                        <!-- Forgot Password -->
                        <div class="card">
                            <div class="card-body d-grid gap-2 col-lg-6 mx-auto">
                                <!-- Logo -->
                                <div class="justify-content-center pb-2">
                                    <a href="#" class="app-brand-link gap-2">
                                        <div class="row gy-3 align-items-center">
                                            <div class="col-lg-2 col-md-3 col-4 p2">
                                                <a href="@Url.Action("Index","Home")" class="brand-wrap"> <img class="logo" height="85" src="~/Image/logo1.png"> </a>
                                            </div>
                                        </div>
                                    </a>
                                </div>
                                <!-- /Logo -->
                                <h4 class="mb-2">Account Verification? 🔒</h4>

                                <p class="mb-4">Please check your email and enter the verification code below</p>

                                <form role="form" action="@Url.Action("AdminAuthenticationEmail","Home")" method="post">

                                    <div class="mb-3">
                                        <label for="code" class="form-label">Code <small style="color: red;">*</small></label>
                                        <input type="text" class="form-control" name="ConfirmEmail" placeholder="Enter your code" autofocus />
                                    </div>
                                    @if (@ViewBag.msg != null)
                                    {
                                        <p style="color: red;">@ViewBag.msg</p>
                                    }
                                    <div class="d-grid gap-2 col-lg-3 mx-auto">
                                        <button class="btn btn-primary d-grid w-100" type="submit">Send</button>
                                    </div>
                                </form>

                            </div>
                        </div>
                        <!-- /Forgot Password -->
                    </div>
                </div>

            </div>
        </main>
    </div>
    <!-- Footer -->
    <footer class="bg-dark text-center text-white mp-4">
        <!-- Grid container -->
        <div class="container p-4">
            <!-- Section: Links  -->
            <section class="">
                <div class="container text-center text-md-start mt-5">
                    <!-- Grid row -->
                    <div class="row mt-3">
                        <!-- Grid column -->
                        <div class="col-md-3 col-lg-5 col-xl-5 mx-auto mb-4">
                            <!-- Content -->
                            <h6 class="text-uppercase fw-bold mb-4">
                                <i class="fas fa-gem me-3 text-secondary"></i>Realtors Portal LQHV
                            </h6>
                            <p>
                                Coming to the online brokerage portal, you can actively search, expand the market, exploit potential customers
                                and experience service packages that meet all customer requirements with attractive and reputable buying / selling policies.
                            </p>
                            <form action="">
                                <!--Grid row-->
                                <!--Grid column-->
                                <div class="col-auto mb- mb-md-0">
                                    <p>
                                        <strong>Sign up for our newsletter</strong>
                                    </p>
                                </div>
                                <div class="row">
                                    <div class="col-md-8 col-8">
                                        <div class="form-file-input">
                                            <input type="email" id="" class="form-control" placeholder="Email address" />
                                        </div>
                                    </div>
                                    <div class="col-md-4 col-4">
                                        <!-- Submit button -->
                                        <button type="submit" class="btn btn-warning text-uppercase">
                                            Submit
                                        </button>
                                    </div>

                                </div>
                                <!--Grid row-->
                            </form>
                        </div>
                        <!-- Grid column -->
                        <!-- Grid column -->
                        <div class="col-md-2 col-lg-2 col-xl-2 mx-auto mb-4">
                            <!-- Links -->
                            <h6 class="text-uppercase fw-bold mb-4">
                                Products
                            </h6>
                            <p>
                                <a href="#!" class="text-reset">Featured real estate</a>
                            </p>
                            <p>
                                <a href="#!" class="text-reset">Real estate for sale</a>
                            </p>
                            <p>
                                <a href="#!" class="text-reset">Real estate for rent</a>
                            </p>
                        </div>
                        <!-- Grid column -->
                        <div class="col-md-3 col-lg-2 col-xl-2 mx-auto mb-4">
                            <!-- Links -->
                            <h6 class="text-uppercase fw-bold mb-4">
                                Useful links
                            </h6>
                            <p>
                                <a href="#!" class="text-reset">Real Estate News</a>
                            </p>
                            <p>
                                <a href="#!" class="text-reset">Advertising service</a>
                            </p>
                            <p>
                                <a href="#!" class="text-reset">help </a>
                            </p>
                        </div>
                        <!-- Grid column -->
                        <!-- Grid column -->
                        <div class="col-md-4 col-lg-3 col-xl-3 mx-auto mb-md-0 mb-4">
                            <!-- Links -->
                            <h6 class="text-uppercase fw-bold mb-4 none">Contact Us</h6>
                            <p><i class="fas fa-home me-3 text-secondary"></i> 590 CMT8, Ward 11, District 3, Ho Chi Minh City </p>
                            <p>
                                <i class="fas fa-envelope me-3 text-secondary"></i>
                                contact@fpt.edu.vn
                            </p>
                            <p><i class="fas fa-phone me-3 text-secondary"></i> + 01 234 567 88</p>
                            <p><i class="fas fa-print me-3 text-secondary"></i> + 01 234 567 89</p>
                        </div>
                        <!-- Grid column -->
                    </div>
                    <!-- Grid row -->
                </div>
            </section>
            <!-- Section: Links  -->
        </div>
        <!-- Grid container -->
        <div class="container p-4 pb-0">
            <!-- Section: Social media -->
            <section class="mb-4">
                <!-- Facebook -->
                <a class="btn text-white btn-floating m-1"
                   style="background-color: #3b5998;"
                   href="#!"
                   role="button">
                    <i class="fab fa-facebook-f"></i>
                </a>

                <!-- Twitter -->
                <a class="btn text-white btn-floating m-1"
                   style="background-color: #55acee;"
                   href="#!"
                   role="button">
                    <i class="fab fa-twitter"></i>
                </a>

                <!-- Google -->
                <a class="btn text-white btn-floating m-1"
                   style="background-color: #dd4b39;"
                   href="#!"
                   role="button">
                    <i class="fab fa-google"></i>
                </a>

                <!-- Instagram -->
                <a class="btn text-white btn-floating m-1"
                   style="background-color: #ac2bac;"
                   href="#!"
                   role="button">
                    <i class="fab fa-instagram"></i>
                </a>

                <!-- Linkedin -->
                <a class="btn text-white btn-floating m-1"
                   style="background-color: #0082ca;"
                   href="#!"
                   role="button">
                    <i class="fab fa-linkedin-in"></i>
                </a>
                <!-- Github -->
                <a class="btn text-white btn-floating m-1"
                   style="background-color: #333333;"
                   href="#!"
                   role="button">
                    <i class="fab fa-github"></i>
                </a>
            </section>
            <!-- Section: Social media -->
        </div>
        <!-- Grid container -->
        <!-- Copyright -->
        <div class="text-center p-4" style="background-color: rgba(0, 0, 0, 0.2);">
            Copyright &copy;
            <script>
                document.write(new Date().getFullYear());
            </script>
            <a class="text-white text-uppercase">Realtors Portal LQHV</a>
        </div>
        <!-- Copyright -->
    </footer>
</body>
</html>