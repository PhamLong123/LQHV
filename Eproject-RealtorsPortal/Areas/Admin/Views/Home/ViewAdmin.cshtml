@model IEnumerable<Eproject_RealtorsPortal.Models.Admin>

@{
    ViewData["Title"] = "ViewAdmin";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="text-blue">Admin management</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item">Home</li>
                    <li class="breadcrumb-item active">Admin List</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>
<section class="content">
    <div class="row">
        <div class=" col-12 col-auto">
            <div class="card">

                <div class="card-body">

                    <table id="admin1" class="table table-bordered table-striped dataTable dtr-inline">
                        <thead>
                            <tr>
                                <th style="width: 5%">
                                    @Html.DisplayNameFor(model => model.AdminId)
                                </th>
                                <th style="width: 20%">
                                    @Html.DisplayNameFor(model => model.AdminName)
                                </th>
                                <th style="width: 15%">
                                    @Html.DisplayNameFor(model => model.AdminEmail)
                                </th>
                                <th style="width: 10%">
                                    @Html.DisplayNameFor(model => model.AdminImage)
                                </th>
                                <th style="width: 10%">
                                    @Html.DisplayNameFor(model => model.AdminStatus)
                                </th>
                                <th style="width: 15%">
                                    @Html.DisplayNameFor(model => model.AdminRole)
                                </th>
                                <th style="width: 30%">Options</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.AdminId)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.AdminName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.AdminEmail)
                                    </td>

                                    <td>
                                        <small>
                                            <ul class="list-inline">
                                                <li class="list-inline-item">
                                                    <img alt="Avatar" class="table-avatar" src="~/admin/dist/Img/@item.AdminImage" style="border-radius: 50%;display: inline;width: 100%;height:30">
                                                </li>
                                            </ul>
                                        </small>
                                    </td>

                                    <td>
                                        @if (item.AdminStatus == false)
                                        {
                                            <label for="UsersStatus" class=" btn-sm btn-danger">
                                                Not activated
                                            </label>
                                        }
                                        else
                                        {
                                            <label for="UsersStatus" class=" btn-sm btn-warning">
                                                Activated
                                            </label>
                                        }
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.AdminRole)
                                    </td>
                                    <td class="project-actions text-right">
                                        <a class="btn btn-primary btn-sm" href="@Url.Action("DetailsAdmin", "Home", new { id=item.AdminId })">
                                            <i class="fas fa-folder"></i>Details
                                        </a>
                                        <a class="btn btn-info btn-sm" href="@Url.Action("EditAdmin", "Home", new { id=item.AdminId })">
                                            <i class="fas fa-edit"></i>Edit
                                        </a>
                                        @if (item.AdminRole == "Super admin")
                                        {
                                            <a class="btn btn-danger btn-sm disabled" onclick="return confirm('Are you sure you want to delete?');" href="@Url.Action("DeleteAdmin", "Home", new {  id=item.AdminId  })">
                                                <i class="fas fa-trash"></i>Delete
                                            </a>
                                        }
                                        else
                                        {
                                            <a class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete?');" href="@Url.Action("DeleteAdmin", "Home", new {  id=item.AdminId  })">
                                                <i class="fas fa-trash"></i>Delete
                                            </a>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>

                    </table>
                </div>
                <!-- /.card-body -->
            </div>
            <!-- /.card -->
        </div>
        <!-- /.col -->
    </div>
    <!-- /.row -->
</section>

<script>
    $(function () {
        $("#admin1").DataTable({
            "responsive": true, "lengthChange": false, "autoWidth": false,
            "buttons": ["copy", "csv", "excel", "pdf", "print", "colvis"]
        }).buttons().container().appendTo('#example1_wrapper .col-md-6:eq(0)');
        $('#example2').DataTable({
            "paging": true,
            "lengthChange": false,
            "searching": false,
            "ordering": true,
            "info": true,
            "autoWidth": false,
            "responsive": true,
        });
    });
</script>