@model Eproject_RealtorsPortal.Models.User

@{
    ViewData["Title"] = "AddUser";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<section class="content pt-2 pb-2">
    <div class="container-fluid">
        <div class="row">
            <div class="offset-md-3 col-md-6">
                <!-- general form elements -->
                <div class="card card-primary">
                    <div class="card-header">
                        <h3 class="card-title">Add User</h3>
                    </div>
                    <!-- /.card-header -->
                    <!-- form start -->
                    <form role="form" action="@Url.Action("AddUser","Home")" method="post" enctype="multipart/form-data">
                        <div class="card-body">
                            @if (@ViewBag.sg != null)
                            {

                                <p style="color: green; font-weight:bold">@ViewBag.sg</p>

                            }
                            @if (@ViewBag.msg != null)
                            {
                                <p style="color: red;">@ViewBag.msg</p>
                            }
                            <div class="form-group">
                                <label for="txt-name">Full Name <small style="color: red;">*</small></label>
                                <input type="text" class="form-control" name="UsersFullname" required>
                            </div>
                            <div class="form-group">
                                <label for="txt-email">Email <small style="color: red;">*</small></label>
                                <input type="email" class="form-control" name="UsersEmail" required>
                            </div>
                            <div class="form-group">
                                <label for="txt-Phone">Phone</label>
                                <input type="number" class="form-control"name="UsersPhone">
                            </div>
                            <div class="form-group">
                                <label class="form-label">Password <small style="color: red;">*</small></label>
                                <input class="form-control" type="password" name="UsersPassword" required>
                            </div>
                            <div class="form-group">
                                <label for="txt-gender" class="pe-3">Gender</label>
                                <div class="col-auto">
                                    <label class="form-check">
                                        <input class="form-check-input" type="radio" value="true" name="UsersGender">
                                        <span class="form-check-label"> Male </span>
                                    </label>
                                </div>
                                <div class="col-auto">
                                    <label class="form-check">
                                        <input class="form-check-input" type="radio" value="false" name="UsersGender">
                                        <span class="form-check-label"> Female </span>
                                    </label>
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="txt-UsersAddress">Address</label><br>
                                <textarea name="UsersAddress" id="UsersAddress" rows="1" class="form-control"></textarea>
                            </div>
                        </div>
                        <div class="card-footer">
                            <button type="submit" class="btn btn-primary"> Save </button>
                            <button type="reset" class="btn btn-outline-danger">Reset</button>
                            <a class="float-end" href="@Url.Action("ViewUser", "Home")"><i class="fas fa-undo-alt"></i>Come back</a>
                        </div>
                    </form>
                </div>
                <!-- /.card -->
            </div>
        </div>
    </div>
</section>

<script src="/admin/plugins/bs-custom-file-input/bs-custom-file-input.min.js"></script>

<script type="text/javascript">
    $(document).ready(function () {
        bsCustomFileInput.init();
    });
</script>

