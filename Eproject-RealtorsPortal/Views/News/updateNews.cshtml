@model Eproject_RealtorsPortal.Models.News

@{
    ViewData["Title"] = "updateNews";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<script src="~/lib/ckeditor/ckeditor.js"></script>

<div class="ml-5">
    <h1>updateNews</h1>

    <h4>News</h4>
    <hr />
    <div>
        <div>
            <form asp-action="updateNews">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group col-md-4">
                    <label asp-for="NewsId" class="control-label"></label>
                    <input asp-for="NewsId" class="form-control" />
                    <span asp-validation-for="NewsId" class="text-danger"></span>
                </div>

                <div class="form-group col-md-4">
                    <label asp-for="NewsTitle" class="control-label"></label>
                    <input asp-for="NewsTitle" class="form-control" />
                    <span asp-validation-for="NewsTitle" class="text-danger"></span>
                </div>

                <div class="form-group col-md-4">
                    <label asp-for="NewsDate" class="control-label"></label>
                    <input asp-for="NewsDate" class="form-control" />
                    <span asp-validation-for="NewsDate" class="text-danger"></span>
                </div>

                <div class="form-group col-md-4">
                    <label asp-for="NewsDesc" class="control-label"></label>
                    <input asp-for="NewsDesc" class="form-control" />
                    <span asp-validation-for="NewsDesc" class="text-danger"></span>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.NewsContent, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.TextAreaFor(model => model.NewsContent, new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                    <script>
                        CKEDITOR.replace("NewsContent");
                    </script>
                </div>

                <div class="form-group col-md-4">
                    <label asp-for="NewsImage" class="control-label"></label>
                    <input asp-for="NewsImage" class="form-control" />
                    <span asp-validation-for="NewsImage" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Index">Back to List</a>
    </div>
</div>


