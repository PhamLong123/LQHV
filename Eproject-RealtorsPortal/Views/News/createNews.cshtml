@model Eproject_RealtorsPortal.Models.NewsAdd

@{
    ViewData["Title"] = "createNews";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<script src="~/lib/ckeditor/ckeditor.js"></script>

<div class="ml-5">
    <h1>Create News Page</h1>
    <hr />
    <div>
        <div >
            <form asp-action="createNews" method="POST" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <!--Input Title-->
                <div class="form-group col-md-4">
                    @Html.LabelFor(model => model.NewsTitle, htmlAttributes: new { @class = "control-label col-md-2" })
                    <input asp-for="NewsTitle" class="form-control" required />
                    <span asp-validation-for="NewsTitle" class="text-danger"></span>
                </div>

                <!--Input Date-->
                <div class="form-group col-md-4">
                    @Html.LabelFor(model => model.NewsDate, htmlAttributes: new { @class = "control-label col-md-2" })
                    <input asp-for="NewsDate" class="form-control" required />
                    <span asp-validation-for="NewsDate" class="text-danger"></span>
                </div>

                <!--Input Title-->
                <div class="form-group col-md-4">
                    @Html.LabelFor(model => model.NewsDesc, htmlAttributes: new { @class = "control-label col-md-2" })
                    <input asp-for="NewsDesc" class="form-control" required />
                    <span asp-validation-for="NewsDesc" class="text-danger"></span>
                </div>
                                
                <div class="form-group">
                    @Html.LabelFor(model => model.NewsContent, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.TextAreaFor(model => model.NewsContent, new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                    <script>
                        CKEDITOR.replace("NewsContent");
                    </script>
                </div>

                <!--Input Img-->
                <div class="form-group col-md-4">
                    <label asp-for="NewsImage" class="control-label">Image Box</label>
                    <input asp-for="NewsImage" type="file" class="form-control" />
                    <span asp-validation-for="NewsImage" class="text-danger"></span>
                </div>

                <div class="form-group mt-1">
                    <input type="submit" value="Create" class="btn btn-success" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="listNews"> ↩ Back to List</a>
    </div>
</div>
<script>
    CKEDITOR.replace("NewsContent");
</script>
