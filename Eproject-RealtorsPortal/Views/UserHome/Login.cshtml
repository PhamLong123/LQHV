@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="gradient-custom">
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-12 col-md-8 col-lg-6 col-xl-5">
                <div class="card bg-gray text-black" style="border-radius: 1rem;">
                    <div class="card-body p-3">
                        <div class="mb-md-3 mt-md-2 pb-1">
                            <div class="app-brand justify-content-center">
                                <a href="index.html" class="app-brand-link gap-2">
                                    <div class="app-brand demo">
                                        <a href="@Url.Action("Index","Home")" class="app-brand-link">
                                            <svg width="150" viewBox="0 0 200 100" xmlns="http://www.w3.org/2000/svg">
                                                <path fill="none"
                                                      stroke="lightgrey"
                                                      d="M20,50 C20,-50 180,150 180,50 C180-50 20,150 20,50 z" />

                                                <circle r="4" fill="red">
                                                    <animateMotion dur="10s"
                                                                   repeatCount="indefinite"
                                                                   path="M20,50 C20,-50 180,150 180,50 C180-50 20,150 20,50 z" />
                                                </circle>
                                                <text x="65" y="55" class="Rrrrr">LQHV</text>
                                            </svg>
                                        </a>

                                        <a href="javascript:void(0);" class="layout-menu-toggle menu-link text-large ms-auto d-block d-xl-none">
                                            <i class="bx bx-chevron-left bx-sm align-middle"></i>
                                        </a>
                                    </div>
                                </a>
                            </div>
                            <form asp-controller="UserHome" asp-action="Login" method="POST">
                                <h2 class="fw-bold mb-2 text-center text-uppercase">Login</h2>
                                @if (@ViewBag.result != null)
                                {
                                    if (@ViewBag.result == true)
                                    {
                                        <p class="text-center fw-bold" style="color: green">Change password successfully, please login again.</p>
                                    }
                                }
                                @if (@ViewBag.sg != null)
                                {

                                    <p style="color: green;">@ViewBag.sg</p>

                                }
                                <p class="text-center text-secondary"><i>Hello, Sign in to continue.</i></p>
                                <div class="form-group col-form-label mb-2">
                                    <label class="form-label" for="UsersEmail"><i class="fas fa-light fa-user me-2"></i>Email <small class="required">*</small></label>
                                    <input type="email" id="UsersEmail" name="UsersEmail" class="form-control form-control-lg" required />
                                    <span name="UsersEmail" class="text-danger"></span>
                                </div>
                                <div class="form-group mb-2">
                                    <label class="form-label" for="UsersPassword"><i class="fas fa-regular fa-lock me-2"></i>Password<small class="required">*</small></label>
                                    <input type="password" id="UsersPassword" name="UsersPassword" class="form-control form-control-lg" required />
                                    <span name="UsersPassword" class="text-danger"></span>
                                </div>

                                @if (@ViewBag.msg != null)
                                {

                                    <p style="color: red;">@ViewBag.msg</p>

                                }
                                <div class="row mt-3 mb-4 align-items-center">
                                    <div class="col-auto">
                                        <button class="btn btn-primary btn-lg px-3" type="submit">Login</button>
                                    </div>
                                    <div class="col">
                                        <label class="form-check me-auto">
                                            <span class="float-end"> <a class="text-black-50" href=" #">Forgot password?</a></span>
                                        </label>
                                    </div>
                                </div>
                            </form>
                        </div>
                        <div>
                            <p class="mb-0 text-center  pb-2">
                                Don't have an account? <a href="@Url.Action("Register","UserHome")" class="text-primary fw-bold">Sign Up</a>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
