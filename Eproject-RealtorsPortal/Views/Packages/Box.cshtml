@{
    Layout = null;
}
@model Package

<div class="card mt-5" style="width:250px;height:300px;" >

    <div class="card-body p-4">
        <div >
            <!-- Package Name-->
            <h3 class="text-center">@Model.PackagesName</h3>

            <!-- Package price-->
            <h6 class="fw-bolder text-center"">@Html.DisplayFor(model => model.PackagesPrice)</h6>

            every month - (included VAT) <br />

            <div class="d-grid gap-2">
                <!-- Button BUY NOW-->
                <a class="btn btn-danger btn-block" href=" @Url.Action("Pay", "Packages", new {Id = Model.PackagesId, price = Model.PackagesPrice})">Buy now</a>
                <!-- Button VIEW DETAIL-->
                <a class="btn btn-outline-dark btn-block" href="@Url.Action("packageDetails", "Packages", new {id = Model.PackagesId})">View details</a>
            </div>

            <!-- Package Desc-->
            @Html.DisplayFor(model => model.PackagesDesc)

        </div>
    </div>
</div>

