@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_layout_UserHome.cshtml";
}

@model Package

@*NOTE
    + lấy dc nội dung từ ID và show ra
    + lấy dc nội dung của file _layout
    + Lỗi: không load dc style từ file layout
*@
    <div class="container px-4 px-lg-5 my-5">
        <div class="row gx-4 gx-lg-5 align-items-center">
            
            <div class="col-md-6">
                <input type="hidden" id="id" value="@Model.PackagesId" />

                <h1 class="display-5 fw-bolder">@Model.PackagesName</h1>
                <div class="fs-5 mb-5">
                        <span>@(string.Format("{0:n} đồng", Model.PackagesPrice))</span>
                </div>
                <p class="lead">@Model.PackagesDesc</p>
            </div>
            <div class="d-flex">
            <p class="lead">@Model.PackagesDuration</p>
            </div>
        </div>
    </div>


