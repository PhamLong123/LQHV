@model Eproject_RealtorsPortal.Models.Package

@{
    ViewData["Title"] = "Update Package";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h1>updatePackage</h1>

<h4>Package</h4>
<hr />
<div class="ml-5">
    <div class="col-md-4">
        <form asp-action="updatePackage">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                @*<label asp-for="PackagesId" class="control-label"></label>*@
                ID:
                <input asp-for="PackagesId" class="form-control" disabled/>
                <span asp-validation-for="PackagesId" class="text-danger"></span>
            </div>

            <div class="form-group">
                @*<label asp-for="PackagesName" class="control-label"></label>*@
                Name:
                <input asp-for="PackagesName" class="form-control" />
                <span asp-validation-for="PackagesName" class="text-danger"></span>
            </div>

            <!--Input Duration-->
            <div class="form-group">
                @*<label asp-for="PackagesDuration" class="control-label"></label>*@
                Package Duration:
                <input asp-for="PackagesDuration" class="form-control" min="1" max="12" required/>
                <span asp-validation-for="PackagesDuration" class="text-danger"></span>
            </div>

            <!--Input Price-->
            <div class="form-group">
                @*<label asp-for="PackagesPrice" class="control-label"></label>*@
                Package Price:
                <input asp-for="PackagesPrice" class="form-control" min="5000" max="99999999999" required/>
                <span asp-validation-for="PackagesPrice" class="text-danger"></span>
            </div>

            <!--Input Description-->
            <div class="form-group">
                @*<label asp-for="PackagesDesc" class="control-label"></label>*@
                Package Description:
                <input asp-for="PackagesDesc" class="form-control" required/>
                <span asp-validation-for="PackagesDesc" class="text-danger"></span>
            </div>

            <!--Input Package Type-->
            <div class="form-group">
                @*<label asp-for="PackageTypeId" class="control-label"></label>*@
                Package Type:          
                <br />              
                <input asp-for="PackageTypeId" class="form-control" disabled/>
                <span asp-validation-for="PackageTypeId" class="text-danger"></span>
            </div>

            <div class="form-group">
                @*<label asp-for="PackageTypeId" class="control-label"></label>*@
                Status:
                <br />
                @Html.EditorFor(m => m.PackagesStatus, new { @class = "form-control" }) 
                <span asp-validation-for="PackagesStatus" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-success" />
            </div>
            <div>
                <a class="btn btn-primary" asp-action="listPackage">Back to List</a>
            </div>
        </form>
    </div>
</div>


