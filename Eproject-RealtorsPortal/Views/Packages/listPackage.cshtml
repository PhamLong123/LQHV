@model IEnumerable<Eproject_RealtorsPortal.Models.Package>

@{
    ViewData["Title"] = "Package List";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h1>Packages List</h1>

<p>
    <a class="btn btn-primary ml-2" asp-action="createPackage">Create New Package</a>
</p>
<table class="table table-hover">
    <thead>
        <tr>
            <th>
                @*@Html.DisplayNameFor(model => model.PackagesId)*@
                ID
            </th>
            <th>
                @*@Html.DisplayNameFor(model => model.PackagesName)*@
                Name
            </th>
            <th>
                @*@Html.DisplayNameFor(model => model.PackagesDuration)*@
                Duration
            </th>
            <th>
                @*@Html.DisplayNameFor(model => model.PackagesPrice)*@
                Price
            </th>
            <th>
                @*@Html.DisplayNameFor(model => model.PackagesDesc)*@
                Description
            </th>
            <th>
                @*@Html.DisplayNameFor(model => model.PackageTypeId)*@
                Type
            </th>
            <th>
                @*@Html.DisplayNameFor(model => model.PackagesStatus)*@
                Status
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.PackagesId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PackagesName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PackagesDuration) month
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PackagesPrice)$
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PackagesDesc)
                </td>
                <td>
                    @*@Html.DisplayFor(modelItem => item.PackageTypeId)*@
                    @if(item.PackageTypeId == 1)
                    {
                        <p>Account Service</p>
                    }
                    @if(item.PackageTypeId == 2)
                    {
                        <p>Ads Posting</p>
                    }
                    @if(item.PackageTypeId == 3)
                    {
                        <p>Free</p>
                    }
                </td>
                <td>
@*                    @Html.DisplayFor(modelItem => item.PackagesStatus)
                    <br>*@
                    @if (item.PackagesStatus == false)
                    {
                        @* Link Active chỉ hiện với các gói == false *@
                        @*@Html.ActionLink("↻ Active", "Active", new { id=item.PackagesId })*@
                        <a class="btn btn-outline-success" href="@Url.Action("Active","Packages", new { id=item.PackagesId })">
                            ↻ Active
                        </a>
                    }
                    @if (item.PackagesStatus == true)
                    {
                        @* Link Active chỉ hiện với các gói == true *@
                        @*@Html.ActionLink("↻ Inactive", "Inactive", new { id=item.PackagesId })*@
                        <a class="btn btn-outline-warning" href="@Url.Action("Inactive","Packages", new { id=item.PackagesId })">
                            ↻ Inactive
                        </a>
                    }
                </td>
                <td class="project-actions text-right">
                    <a class="btn btn-primary btn-sm" href="@Url.Action("updatePackage", "Packages", new { id=item.PackagesId })">
                        <i class="fas fa-folder"></i>Update
                    </a>
                    <a class="btn btn-danger btn-sm"
                   onclick="return confirm('Are you sure you want to delete @Html.DisplayFor(modelItem => item.PackagesName)?');"
                   href="@Url.Action("Delete", "Packages", new { id=item.PackagesId })">
                        <i class="fas fa-trash"></i>Delete
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
