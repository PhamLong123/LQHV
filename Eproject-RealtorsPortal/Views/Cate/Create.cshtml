@model Eproject_RealtorsPortal.Models.Category

@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h1>Create New Category</h1>
<hr />
<div class="ml-5">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                Category Name
                <input asp-for="CategoryName" class="form-control" />
                <span asp-validation-for="CategoryName" class="text-danger"></span>
            </div>

            <div class="form-group">
                Category Status <br /> (True = Active/ False = Inactive) <br />
                @Html.EditorFor(m => m.CategoryStatus, new { @class = "form-control" }) 
                <span asp-validation-for="CategoryStatus" class="text-danger"></span>
            </div>

            <div class="form-group">
                Business Types Id
                <input asp-for="BusinessTypesId" class="form-control" />
                <span asp-validation-for="BusinessTypesId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-success" />
            </div>
            <div>
                <a class="btn btn-primary" asp-action="cateList">Back to List</a>
            </div>
        </form>
    </div>
</div>

