@model Payment

@{
    ViewData["Title"] = "Pay";
    Layout = "~/Views/Shared/_layout_UserHome.cshtml";
}

<h1>Pay</h1>

<h4>Payment</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Pay" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                 <label asp-for="PaymentPrice" class="control-label">Price</label>
                 <input asp-for="PaymentPrice" class="form-control" readonly value="@Context.Session.GetString("PackagePrice")" />
                <span asp-validation-for="PaymentPrice" class="text-danger"></span>
            </div>
            <div class="form-group">
@*                <label asp-for="PaymentTotal" class="control-label">Total</label>
*@                <input asp-for="PaymentTotal" class="form-control" readonly/>
                <span asp-validation-for="PaymentTotal" class="text-danger"></span>
            </div>
            <div class="form-group">
@*                <label asp-for="PaymentDatetime" class="control-label"></label>
*@                <input asp-for="PaymentDatetime" class="form-control" readonly value="@DateTime.Today" />
                <span asp-validation-for="PaymentDatetime" class="text-danger"></span>
            </div>
            @if (Context.Session.GetString("PayType") == "ads")
            {
                <div class="form-group">
@*                <label asp-for="ProductId" class="control-label">Buy</label>
*@                <input asp-for="ProductId" class="form-control" readonly type="hidden" value="@Context.Session.GetString("ProductId")" />
                    <span asp-validation-for="ProductId" class="text-danger"></span>
                </div>
            }

            <div class="form-group">
@*                <label asp-for="UsersId" class="control-label"></label>
*@                <input asp-for="UsersId" class="form-control" type="hidden" value="@Context.Session.GetString("UserId")" />
                <span asp-validation-for="UsersId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PackageId" class="control-label">Package</label>
                <input asp-for="PackageId" class="form-control" type="hidden" value="@Context.Session.GetString("PackageID")" />
                <input id="package" class="form-control" type="text" readonly value="@Context.Session.GetString("PackageName")" />
                <span asp-validation-for="PackageId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="AllOwnAds">Back to List</a>
</div>

